{
    "name": "sixonefour",
    "version": "0.1.4",
    "description": "A feature-rich SoundCloud desktop client with Discord Rich Presence, customizable themes, a floating media widget, global hotkeys, a download manager, Telegram integration, network tools, and high-precision listening statistics.",
    "keywords": [
        "soundcloud",
        "electron",
        "desktop-client",
        "discord-rpc",
        "music-player",
        "themes",
        "widget",
        "zapret",
        "media-hotkeys",
        "download-manager",
        "telegram-integration",
        "listening-statistics"
    ],
    "author": {
        "name": "Frolov Dmitriy",
        "email": "mittz1337@gmail.com"
    },
    "license": "MIT",
    "scripts": {
        "lint": "eslint -c .eslintrc --ext .ts ./src",
        "copy-header": "cpx \"src/header/**/*\" tsc/header",
        "copy-widget": "cpx \"src/widget/**/*\" tsc/widget",
        "copy-statistics": "cpx \"src/statistics/**/*\" tsc/statistics",
        "copy-splash": "cpx \"src/splash/**/*\" tsc/splash",
        "dev": "tsc && npm run copy-header && npm run copy-widget && npm run copy-statistics && npm run copy-splash && electron ./tsc/main.js --dev",
        "build": "tsc && npm run copy-header && npm run copy-widget && npm run copy-statistics && npm run copy-splash && electron-builder --dir",
        "build-win": "tsc && npm run copy-header && npm run copy-widget && npm run copy-statistics && npm run copy-splash && electron-builder -w nsis",
        "build-win-ptb": "tsc && npm run copy-header && npm run copy-widget && npm run copy-statistics && npm run copy-splash && electron-builder -w portable",
        "build-mac": "tsc && npm run copy-header && npm run copy-widget && npm run copy-statistics && npm run copy-splash && electron-builder -m dmg",
        "build-linux-deb": "tsc && npm run copy-header && npm run copy-widget && npm run copy-statistics && npm run copy-splash && electron-builder -l deb",
        "build-linux-appimage": "tsc && npm run copy-header && npm run copy-widget && npm run copy-statistics && npm run copy-splash && electron-builder -l appimage"
    },
    "main": "./tsc/main.js",
    "repository": "https://github.com/1vilio/sixonefour",
    "publish": {
        "provider": "github",
        "releaseType": "release"
    },
    "build": {
        "appId": "com.1vilio.sixonefour",
        "productName": "sixonefour",
        "asar": true,
        "extraResources": [
            {
                "from": "assets/icons",
                "to": "assets/icons"
            }
        ],
        "extraFiles": [
            {
                "from": "themes",
                "to": "themes"
            }
        ],
        "files": [
            "tsc/**/*"
        ],
        "directories": {
            "output": "build"
        },
        "mac": {
            "target": "dmg",
            "icon": "assets/icons/soundcloud-mac.icns",
            "artifactName": "sixonefour-${version}-mac.${ext}"
        },
        "win": {
            "target": "nsis",
            "icon": "assets/icons/soundcloud-win.ico",
            "artifactName": "sixonefour-${version}-installer-win.${ext}",
            "requestedExecutionLevel": "requireAdministrator"
        },
        "linux": {
            "target": "AppImage",
            "artifactName": "sixonefour-${version}-installer-linux.${ext}"
        }
    },
    "devDependencies": {
        "@eslint/eslintrc": "^3.3.1",
        "@eslint/js": "^9.37.0",
        "@types/form-data": "^2.5.0",
        "@types/node": "^24.2.1",
        "@types/semver": "^7.5.8",
        "electron": "^37.0.0",
        "electron-builder": "^26.0.12",
        "eslint": "^9.33.0",
        "node-addon-api": "^1.7.2",
        "prettier": "3.6.2",
        "typescript": "^5.9.2",
        "typescript-eslint": "^8.46.0"
    },
    "dependencies": {
        "@ghostery/adblocker-electron": "^2.11.3",
        "@xhayper/discord-rpc": "^1.3.0",
        "ably": "^2.16.0",
        "cpx": "^1.5.0",
        "cross-fetch": "^4.0.0",
        "discord-api-types": "^0.38.18",
        "dotenv": "^17.2.3",
        "electron-log": "^5.4.3",
        "electron-prompt": "^1.7.0",
        "electron-store": "^8.1.0",
        "electron-updater": "^6.3.4",
        "electron-window-state": "^5.0.3",
        "form-data": "^4.0.1",
        "nedb-promises": "^6.2.3",
        "node-id3": "^0.2.9",
        "sanitize-filename": "^1.6.3",
        "scdl-core": "^1.0.0"
    }
}